    class Person {
        +String firstName
        +String lastName
        +LocalDate birthDate
        +String getName()
    }

    %% Company Class
    class Company {
        +String companyName
        +String companyIdentifier
        +String getDisplayName()
    }

    %% Contract Class
    class Contract {
        +Long id
        +LocalDate startDate
        +LocalDate endDate
        +BigDecimal costAmount
        +LocalDateTime lastModifiedDate
        +LocalDateTime createdAt
        +Client client
        +boolean isActive()
        +onCreate()
        +onUpdate()
    }

    %% Enumeration
    class ClientType {
        <<enumeration>>
        PERSON
        COMPANY
    }

